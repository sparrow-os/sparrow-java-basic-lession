<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sparrow.passport.dao.UserDao">

    <resultMap type="com.sparrow.passport.entity.User" id="UserMap">
        <result property="user_id" column="userId" jdbcType="INTEGER"/>
        <result property="user_name" column="userName" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryByUserName" resultMap="UserMap">
        select user_id,
               user_name,
               password
        from user
        where id = #{id}
    </select>
</mapper>

